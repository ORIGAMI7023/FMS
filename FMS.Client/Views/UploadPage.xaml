<Window x:Class="FMS.Client.Views.UploadPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="上传营收数据" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="医生姓名" />
            <TextBox Text="{Binding Record.DoctorName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            
            <TextBlock Text="日期" />
            <DatePicker SelectedDate="{Binding Record.Date}" Margin="0,0,0,10"/>

            <TextBlock Text="金额" />
            <TextBox Text="{Binding Record.Amount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <Button Content="上传" Command="{Binding UploadCommand}" />
        </StackPanel>
    </Grid>
</Window>