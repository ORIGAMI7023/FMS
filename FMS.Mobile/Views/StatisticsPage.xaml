<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FMS.Mobile.ViewModels"
             x:Class="FMS.Mobile.Views.StatisticsPage">

    <ContentPage.BindingContext>
        <vm:StatisticsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="20">
            <Label Text="项目收入统计" FontSize="24" HorizontalOptions="Center" />

            <DatePicker Date="{Binding SelectedDate}" />
            <Button Text="刷新" Command="{Binding LoadStatisticsCommand}" />

            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding itemType}" FontSize="18" />
                                <Label Text="{Binding totalAmount}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>