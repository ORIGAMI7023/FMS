<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:vm="clr-namespace:FMS.Mobile.ViewModels"
             x:Class="FMS.Mobile.Views.DashboardPage">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="20">
            <Label Text="医生营收 Dashboard" FontSize="24" HorizontalOptions="Center" />

            <DatePicker Date="{Binding SelectedDate}" />
            <Button Text="刷新" Command="{Binding LoadDataCommand}" />

            <microcharts:ChartView Chart="{Binding DailyChart}" HeightRequest="300" />
            <Label Text="金额统计" FontSize="16" HorizontalOptions="Center" Margin="0,10"/>

            <microcharts:ChartView Chart="{Binding DailyVisitCountChart}" HeightRequest="300" />
            <Label Text="人次统计" FontSize="16" HorizontalOptions="Center" Margin="0,10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
